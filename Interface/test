import streamlit as st
from pages_uses import accueil, cartographie, prediction, evolution

# Titre en haut du menu latéral
st.sidebar.markdown("<h1 style='text-align: center; color: black;'>GreenTech</h1>", unsafe_allow_html=True)

# Menu latéral sans titre
menu_option = st.sidebar.selectbox(
    "",  # Titre vide
    options=["🏠 Accueil", "🗺️ Cartographie", "📊 Prédiction prix de vente", "📈 Évolution"],
)

# Navigation vers les pages en fonction du choix dans le menu
if menu_option == "🏠 Accueil":
    accueil.show()
elif menu_option == "🗺️ Cartographie":
    cartographie.show()
elif menu_option == "📊 Prédiction prix de vente":
    prediction.show()
elif menu_option == "📈 Évolution":
    evolution.show()

# Pied de page
st.sidebar.markdown("GreenTech Solutions © 2024")
